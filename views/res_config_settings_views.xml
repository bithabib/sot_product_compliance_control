<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_compliance" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.compliance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Product Compliance" string="Product Compliance" name="product_compliance">
                    <block title="Compliance Notifications">
                        <setting string="Email Notifications" help="Configure email recipients for compliance status change alerts">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="compliance_notification_email" class="col-lg-3 o_light_label"/>
                                    <field name="compliance_notification_email" placeholder="e.g., compliance@company.com, manager@company.com"/>
                                </div>
                                <div class="text-muted mt8">
                                    Enter email addresses to receive notifications when product compliance status changes from Approved to Not Approved. Separate multiple emails with commas.
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
